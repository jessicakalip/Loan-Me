<div class="nav-bar">
  <div class="row justify-content-between align-items-center">
    <div class="col-1">
      <% if user_signed_in? %>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-bars drop-down view-activity"></i>
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <ul>
              <li>
                <%= link_to profiles_path do %>
                <p>Find Friends</p>
                <% end %>
              </li>

              <li>
                <%= link_to dashboard_path(tab: "hangout") do %>
                <p>Hangouts</p>
                <% end %>
              </li>

              <li>
                <%= link_to dashboard_path(tab: "request") do %>
                <p>Request</p>
                <% end %>
              </li>

              <li>
                <% if !policy(Profile).create? %>
                  <%= link_to profile_path(current_user.profile) do %>
                  <p>My Profile</p>
                  <% end %>
                <% else %>
                  <%= link_to new_profile_path do %>
                  <p>Create my profile</p>
                  <% end %>
                <% end %>
              </li>
              
              <li>
                <%= link_to edit_user_registration_path do %>
                <p>Change Password</p>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
        
      
      <% end %>
    </div>
    <div class="col-9">
    <% if user_signed_in? %>
      <div class="content d-flex justify-content-end align-items-end">
          <div class="login">
            <%= link_to destroy_user_session_path, method: :delete do %>
            <div class="d-flex align-items-center">
              <div class="text">
                <p class="d-inline mr-2">Log out</p>
              </div>
              <i class="fas fa-caret-right d-inline"></i>
            </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="content d-flex justify-content-end align-items-end">
          <div class="login">
            <%= link_to new_user_registration_path do %>
              <div class="d-flex align-items-center">
              <div class="text">
                <p class="d-inline mr-2">Sign up</p>
              </div>
                <i class="fas fa-caret-right d-inline"></i>
              </div>
            <% end %>
          </div>
          <div class="login">
            <%= link_to new_user_session_path do %>
            <div class="d-flex align-items-center">
              <div class="text">
                <p class="d-inline mr-2">Log in</p>
              </div>
              <i class="fas fa-caret-right d-inline"></i>
            </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
