

<div class="small-banner d-flex justify-content-between" style="background-color: #74BEB8;">
  <div class="container margin">
    <h1>History</h1>
    <p><em><small>Overview for all your hangouts here</em></small></p>
  </div>
</div>

<ul class="nav nav-tabs list-inline tabs-underlined mt-4" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link tab-underlined <%= "active" if params[:tab] == "hangout" || !params[:tab] %>" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="hangout" aria-selected="true">Hangouts</a>
  </li>

  <li class="nav-item" role="presentation">
    <a class="nav-link tab-underlined <%= "active" if params[:tab] == "request" %>" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="request" aria-selected="false">Requests</a>
  </li>
</ul>

<div class="tab-content" id="myTabContent">

  <div class="tab-pane <%= params[:tab] == "hangout" || !params[:tab] ? "active" : "fade" %>" id="home" role="tabpanel" aria-labelledby="home-tab">
   <div class="container">

    <% @hangouts.each do |hangout| %>
    <%= link_to hangout_path(hangout), class: "hangouts-grey" do %>
    <div class="notification p-3">
      <% if hangout.profile.photo.attached? %>
        <%= cl_image_tag hangout.profile.photo.key, class: "avatar" %>
      <% else %>
        <%= cl_image_tag "avatar_ivxvwp", class: "avatar" %>
      <% end %>
       <div class="notification-content">
         <% day = Date.today - hangout.created_at.to_date %>
         <p><small><%= day.to_i %>day(s) ago</small></p>
         <p>You have a hangout with <strong><%= hangout.profile.name %></strong></p>
       </div>

       <div class="">
        <p><%= hangout.status %><i class="fas fa-pencil-alt"></i></p>
       </div>

       </div>
       <% end %>
        <% end %>
  </div>
</div>

  <div class="tab-pane <%= params[:tab] == "request" ? "active" : "fade" %>" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <div class="container">

      <% @requests.each do |request| %>
    <%= link_to hangout_path(request), class: "hangouts-grey hover" do %>
    <div class="notification p-3">
      <img src='https://images.unsplash.com/photo-1593085512500-5d55148d6f0d?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80.png' class="avatar"/>
       <div class="notification-content">
         <% day = Date.today - request.created_at.to_date %>
         <p><small><%= day.to_i %>day(s) ago</small></p>
         <p>You have a request from user: <strong><%= request.user.email %></strong></p>
       </div>

       <div class="">
        <p><%= request.status %><i class="fas fa-pencil-alt"></i></p>
       </div>

       </div>
       <% end %>
        <% end %>
  </div>
</div>

</div>
