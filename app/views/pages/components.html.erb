  <!-- SEARCH BAR -->

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-6">
        <h2>SEARCH BAR</h2>
        <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-success">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        </form>
        <hr>

        <!-- FRIEND CARDS -->
        <h2>FRIEND CARDS</h2>
        <% @profiles.each do |profile| %>
        <%= link_to "#", class: "card-link" do %>
        <div class="card-friend">
          <% if profile.photo.attached? %>
          <%= cl_image_tag profile.photo.key %>
          <% else %>
          <%= cl_image_tag "avatar_ivxvwp" %>
          <% end %>
          <div class="card-friend-infos">
            <h2><%= profile.name %>
              <% if profile.gender == "female" %>
              <i class="fas fa-venus"></i>
              <% elsif profile.gender == "male" %>
              <i class="fas fa-mars"></i>
              <% else %>
              <i class="fas fa-transgender-alt"></i>
              <% end %>
              <%= profile.age %></h2>
              <p>Interests: <%= profile.interest %></p>
            </div>
          </div>
          <% end %>
          <% end %>

          <!-- Hangout Cards -->
          <h2>HANGOUT CARDS</h2>
          <% @hangouts.each do |hangout| %>
          <%= link_to "#", class: "card-link" do %>
          <div class="card-friend">
            <% if hangout.profile.photo.attached? %>
            <%= cl_image_tag hangout.profile.photo.key %>
            <% else %>
            <%= cl_image_tag "avatar_ivxvwp" %>
            <% end %>
            <div class="card-friend-infos">
              <h2><%= hangout.profile.name %>
                <% if hangout.profile.gender == "female" %>
                <i class="fas fa-venus"></i>
                <% elsif hangout.profile.gender == "male" %>
                <i class="fas fa-mars"></i>
                <% else %>
                <i class="fas fa-transgender-alt"></i>
                <% end %>
                <%= hangout.profile.age %></h2>
                <p><%= hangout.date %> - <%= hangout.time %></p>
                <p>Status: <%= hangout.status %></p>
              </div>
            </div>
            <% end %>
            <% end %>


          </div>
        </div>
      </div>


