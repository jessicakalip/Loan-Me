<div class="page-container d-flex">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <% @profiles.each do |profile| %>
        <div class="col-4">
          <div class="row d-flex flex-column m-3">
            <% if profile.photo.attached? %>
              <%= cl_image_tag profile.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face %>
            <% else %>
              <%= cl_image_tag "avatar_ivxvwp", width: 150, height: 150, crop: :thumb, gravity: :face %>
            <% end %>
            <%= profile.name %>
            <%= link_to "See More", profile_path(profile) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
