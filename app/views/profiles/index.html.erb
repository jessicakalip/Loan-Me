<div class="banner">
  <div class="container m-5 p-5 ">
      <h1>View Friends</h1>
      <h3><em>Checkout all our amazing friends</em></h3>
    </div>
  </div>
</div>

<div class="container">
  <%= form_with url: profiles_path, method: :get, data: {remote: false} do |f|%>
    <%= f.label :address %>
    <%= f.select :address, ['All', 'Marseille', 'Paris', 'Lyon', 'Nice', 'Reims'], selected: params[:address] %>
    <%= f.label :gender %><br>
    <%= f.select :gender, Profile::GENRES, :prompt => 'Select One', selected: params[:gender]%>
    <%= text_field_tag :min_age,
      params[:min_age],
      class: "form-control",
      placeholder: "Choose your friend's min age'",
      value: params[:min_age]%>
    <%= text_field_tag :max_age,
      params[:max_age],
      class: "form-control",
      placeholder: "Choose your friend's max age",
      value: params[:max_age]%>
    <h5>Interests:</h5>
    <% Profile::INTERESTS.each do |interest| %>
      <label for=""><%=interest%></label>
      <input type="checkbox" name="interests[]", value="<%=interest%>" <%= "checked" if params[:interests].present? && params[:interests].include?(interest)%>>
    <% end %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="page-container d-flex">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <% @profiles.each do |profile| %>
        <div class="col-4">
          <div class="row d-flex flex-column m-3">
            <% if profile.photo.attached? %>
              <%= cl_image_tag profile.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face %>
            <% else %>
              <%= cl_image_tag "avatar_ivxvwp", width: 150, height: 150, crop: :thumb, gravity: :face %>
            <% end %>
            <%= profile.name %>
            <%= link_to "See More", profile_path(profile) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
