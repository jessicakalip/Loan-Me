<h1>Create your Profile</h1>

<%= simple_form_for @profile do |f| %>
  <%= f.input :name %>
  <%= f.input :age %>
  <%= f.input :gender, as: :select, collection: Profile::GENRES %>
  <%= f.input :interest, label: "Add your interests here" %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
