<div class="small-banner d-flex justify-content-between" style="background-color: #74BEB8;">
  <div class="container margin">
      <h1>Edit Profile for <%= @current_user.profile.name%></h1>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center mb-5">
    <div class="col-6">
      <%= simple_form_for @profile do |f| %>
        <%= f.input :name %>
        <%= f.input :age %>
        <%= f.input :gender, as: :select, collection: Profile::GENRES %>
        <%#= f.input :interest, label: "Add your interests here" %>
        <%= f.input :interest, :label => "Interests", :collection => Profile::INTERESTS, wrapper_html: { class: 'form-group' }, :as => :check_boxes, include_hidden: false, :input_html => {:multiple => true} %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
