<div class="banner">
  <div class="container m-5 p-5 ">
      <h1>Edit your profile</h1>
      <h3><em>First impressions matter!</em></h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center mb-5">
    <div class="col-6">
      <%= simple_form_for @profile do |f| %>
        <%= f.input :name %>
        <%= f.input :age %>
        <%= f.input :gender, as: :select, collection: Profile::GENRES %>
        <%#= f.input :interest, label: "Add your interests here" %>
        <%= f.input :interest, :label => "Interests", :collection => Profile::INTERESTS, wrapper_html: { class: 'form-group' }, :as => :check_boxes, include_hidden: false, :input_html => {:multiple => true} %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
