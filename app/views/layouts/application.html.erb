<!DOCTYPE html>
<html>
<head>
  <title>LoanMe</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
</head>

<body>
  <!-- NAVBAR -->
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to image_tag("https://i.ibb.co/C8pt2Gt/7117708842ad40a996cb95e93715bf9b-1.png", border: 0), root_path, class: 'navbar-brand' %>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.profile && current_user.profile.photo.attached? %>
          <%= cl_image_tag current_user.profile.photo.key, id: "navbarDropdown", data: {toggle: "dropdown"}, aria: {haspopup: "true"}, aria: {expanded: "false"}, class: "avatar dropdown-toggle"%>
          <% else %>
          <%= cl_image_tag "avatar_ivxvwp", id: "navbarDropdown", data: {toggle: "dropdown"}, aria: {haspopup: "true"}, aria: {expanded: "false"}, class: "avatar dropdown-toggle"%>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Hangouts", dashboard_path(tab: "hangout"), class: "dropdown-item" %>
            <%= link_to "My Requests", dashboard_path(tab: "request"), class: "dropdown-item" %>
            <%= link_to "Friend Profile", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Account", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        <% else %>
        <li class="nav-item dropdown">
          <%= cl_image_tag "avatar_ivxvwp", id: "navbarDropdown", data: {toggle: "dropdown"}, aria: {haspopup: "true"}, aria: {expanded: "false"}, class: "avatar dropdown-toggle"%>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "dropdown-item" %>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
  <!-- END NAVBAR -->
  <%= yield %>
  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
    <div class="footer-copyright text-center">
      Don't be lonely, choose Loan Me!
    </div>
  </div>
</body>
</html>
